    "editor.acceptSuggestionOnEnter": "smart",
    "editor.inlineSuggest.edits.renderSideBySide": "auto",
    "editor.inlineSuggest.enabled": true,
    "terminal.integrated.suggest.quickSuggestions": {
        
        "commands": "on",
